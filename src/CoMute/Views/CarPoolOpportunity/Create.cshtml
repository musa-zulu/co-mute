@{
    ViewBag.Title = "Car Pool Opportunity";
}

<form id="carpool">
    <h2>Car Pools Opportunity</h2>

    <div id="error" class="row row-margin hidden">
        <div class="col-md-4 col-md-offset-4 alert alert-danger">
            <p></p>
        </div>
    </div>

    <div class="form-group">
        <label for="name">Departure time</label>
        <input type="datetime" id="departure-time" class="form-control" placeholder="Departure Time" required autofocus>
    </div>

    <div class="form-group">
        <label for="expected-arrival-time">Expected arrival time</label>
        <input type="datetime" id="expected-arrival-time" class="form-control" placeholder="Expected arrival time" required>
    </div>

    <div class="form-group">
        <label for="origin">Origin</label>
        <input type="text" id="origin" class="form-control" placeholder="Origin" required>
    </div>

    <div class="form-group">
        <label for="days-available">Days Available</label>
        <input type="number" id="days-available" class="form-control" placeholder="Days available" required>
    </div>

    <div class="form-group">
        <label for="destination">Destination</label>
        <input type="text" id="destination" class="form-control" placeholder="Destination" required>
    </div>

    <div class="form-group">
        <label for="available-seats">Available Seats</label>
        <input type="number" id="available-seats" class="form-control" placeholder="Available seats">
    </div>

    <div class="form-group">
        <label for="notes">Notes</label>
        <input type="text" id="notes" class="form-control" placeholder="Notes">
    </div>


    <div class="form-group">
        <button class="btn btn-primary" type="submit" id="sign-in">Save</button>
    </div>
</form>

@section scripts {
    <script type="text/javascript" src="~/Content/js/carpool.js"></script>
}